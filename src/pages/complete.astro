---
import GameLayout from '../layouts/GameLayout.astro';
import { decodeGameState, encodeGameState } from '../lib/urlCodec.js';
import { getAllMeals, generateShoppingList } from '../lib/gameData.js';

export const prerender = false;

const params = Astro.url.searchParams;
const state = decodeGameState(params);

if (!state || state.status !== 'complete') {
  return Astro.redirect('/');
}

const currentPlayer = params.get('player') || 'A';

// Fetch full meal data
const allMeals = await getAllMeals();
const allFinalMeals = state.results.finalMenu.map(id => allMeals.find(m => m.id === id));

// Filter out undefined meals (takeout) for shopping list and display
const finalMeals = allFinalMeals.filter(meal => meal !== undefined);

// Generate shopping list (only for non-takeout meals)
const shoppingList = await generateShoppingList(finalMeals);

// Get checked items from URL
const checkedParam = params.get('checked') || '';
const checkedItems = checkedParam ? checkedParam.split(',') : [];

// Calculate total USD cost (including takeout meals at $30 each)
const totalUSD = state.results.finalMenu.reduce((sum, id) => {
  const meal = allMeals.find(m => m.id === id);
  if (meal) {
    return sum + (meal.estimatedPrice || 0);
  } else {
    // Takeout meal - $$$
    return sum + 30;
  }
}, 0);
const peopleCount = 2;
const totalCost = totalUSD * peopleCount;
---

<GameLayout>
  <div class="panel">
    <div class="panel-title">QUEST COMPLETE!</div>

    <div class="final-menu">
      <h2>Your Final Menu</h2>
      <div class="menu-grid">
        {finalMeals.map(meal => (
          <div class="menu-item">
            <span class="menu-emoji">{meal?.emoji || '?'}</span>
            <div class="menu-details">
              <div class="menu-name">{meal?.name || 'Unknown'}</div>
              <div class="menu-meta">
                <span>{meal?.time}min</span>
                <span>{meal?.cost}</span>
                <span>{meal?.cuisine}</span>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="total-cost">
        <div class="cost-breakdown">
          ${totalUSD.toFixed(2)} Ã— {peopleCount} people = <strong>${totalCost.toFixed(2)}</strong>
        </div>
      </div>
    </div>

    <div class="shopping-list-section" x-data="shoppingListData()">
      <h3>Shopping List</h3>

      <div class="share-actions">
        <button @click="sendSMS" class="btn btn-primary">
          Conjure & Share
        </button>
        <button @click="copyLink" class="btn btn-secondary" title="Copy link">
          ðŸ”—
        </button>
      </div>
      <div id="share-message" class="share-message" style="display: none;"></div>

      {Object.entries(shoppingList.bySection).map(([sectionName, items]) => (
        <div class="grocery-section">
          <div class="section-header">
            <span class="section-name">{sectionName}</span>
          </div>

          <ul class="ingredient-list">
            {items.map(item => {
              const itemId = item.ingredient.toLowerCase().replace(/[^a-z0-9]/g, '-');
              return (
                <li data-item-id={itemId}>
                  <label class="ingredient-item">
                    <input
                      type="checkbox"
                      :checked={`checkedItems.has('${itemId}')`}
                      @change={`toggleItem('${itemId}')`}
                    />
                    <span :class={`checkedItems.has('${itemId}') ? 'line-through opacity-50' : ''`}>
                      {item.ingredient}
                    </span>
                    <span class="meal-usage">
                      ({item.meals.join(', ')})
                    </span>
                  </label>
                </li>
              );
            })}
          </ul>
        </div>
      ))}
    </div>

    <div class="action-buttons">
      <button onclick="window.location.href = '/'" class="btn btn-primary">
        New Quest
      </button>
    </div>
  </div>

  <div class="narrative">
    <p>The week is planned. The kitchen awaits. Your culinary adventure begins now!</p>
  </div>

  <script is:inline>
    window.shoppingListData = function() {
      // Get initial checked items from URL
      const urlParams = new URLSearchParams(window.location.search);
      const checkedParam = urlParams.get('checked') || '';
      const initialChecked = checkedParam ? checkedParam.split(',').filter(Boolean) : [];

      return {
        checkedItems: new Set(initialChecked),

        toggleItem(itemId) {
          if (this.checkedItems.has(itemId)) {
            this.checkedItems.delete(itemId);
          } else {
            this.checkedItems.add(itemId);
          }
          this.updateURL();
        },

        updateURL() {
          const urlParams = new URLSearchParams(window.location.search);

          // Update checked items
          if (this.checkedItems.size > 0) {
            urlParams.set('checked', Array.from(this.checkedItems).join(','));
          } else {
            urlParams.delete('checked');
          }

          const newUrl = `${window.location.pathname}?${urlParams.toString()}`;
          window.history.replaceState({}, '', newUrl);
        },

        async copyLink() {
          const shareUrl = window.location.href;
          const shareMessage = document.getElementById('share-message');

          try {
            await navigator.clipboard.writeText(shareUrl);
            shareMessage.textContent = 'Link copied to clipboard!';
            shareMessage.style.display = 'block';
            setTimeout(() => {
              shareMessage.style.display = 'none';
            }, 3000);
          } catch (err) {
            console.error('Copy failed:', err);
            shareMessage.textContent = 'Failed to copy link.';
            shareMessage.style.display = 'block';
          }
        },

        async sendSMS() {
          const shareUrl = window.location.href;
          const message = `Check out our Dinner Quest meal plan and shopping list: ${shareUrl}`;
          const shareMessage = document.getElementById('share-message');

          // Use Web Share API to share with partner
          if (navigator.share) {
            try {
              await navigator.share({
                title: 'Dinner Quest - Meal Plan',
                text: message
              });
              shareMessage.textContent = 'Shared successfully!';
              shareMessage.style.display = 'block';
              setTimeout(() => {
                shareMessage.style.display = 'none';
              }, 3000);
            } catch (err) {
              // User cancelled or share failed
              if (err.name !== 'AbortError') {
                console.error('Share failed:', err);
                shareMessage.textContent = 'Share failed. Copy link with ðŸ”— button.';
                shareMessage.style.display = 'block';
              }
            }
          } else {
            // Browser doesn't support Web Share API - fallback to SMS
            const smsUrl = `sms:?&body=${encodeURIComponent(message)}`;
            window.location.href = smsUrl;
          }
        }
      };
    }
  </script>

  <style>
    .final-menu h2 {
      font-size: 14px;
      color: var(--accent);
      margin-bottom: 16px;
      text-align: center;
    }

    .menu-grid {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-bottom: 30px;
    }

    .menu-item {
      display: flex;
      align-items: center;
      gap: 16px;
      padding: 16px;
      background: var(--bg-dark);
      border: 2px solid var(--accent);
      transition: all 0.2s;
    }

    .menu-item:hover {
      transform: translateX(4px);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .menu-emoji {
      font-size: 32px;
    }

    .menu-details {
      flex: 1;
    }

    .menu-name {
      font-size: 14px;
      font-weight: bold;
      margin-bottom: 4px;
    }

    .menu-meta {
      display: flex;
      gap: 12px;
      font-size: 14px;
      color: var(--text-dim);
    }

    .total-cost {
      margin-top: 20px;
      padding: 16px;
      background: var(--bg-panel);
      border: 2px solid var(--accent);
      text-align: center;
    }

    .cost-breakdown {
      font-size: 14px;
      color: var(--text);
    }

    .cost-breakdown strong {
      color: var(--accent);
      font-size: 16px;
    }

    .shopping-list-section {
      margin: 30px 0;
    }

    .shopping-list-section h3 {
      font-size: 14px;
      color: var(--accent);
      margin-bottom: 16px;
      text-align: center;
    }

    .share-actions {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
    }

    .share-actions .btn-primary {
      flex: 1;
    }

    .share-actions .btn-secondary {
      flex: 0;
      width: 52px;
    }

    .share-message {
      margin-bottom: 16px;
      padding: 12px;
      background: var(--bg-panel);
      border: 2px solid var(--accent);
      color: var(--accent);
      font-size: 14px;
      text-align: center;
    }

    .grocery-section {
      margin-bottom: 20px;
      padding: 16px;
      background: var(--bg-panel);
      border: 2px solid var(--border);
    }

    .section-header {
      font-size: 14px;
      font-weight: bold;
      color: var(--accent);
      margin-bottom: 8px;
      padding-bottom: 8px;
      border-bottom: 1px solid var(--border);
    }

    .section-name {
      display: block;
    }

    .ingredient-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .ingredient-list li {
      margin: 4px 0;
    }

    .ingredient-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px;
      background: var(--bg-dark);
      font-size: 14px;
      cursor: pointer;
      transition: all 0.2s;
    }

    .ingredient-item:hover {
      background: var(--bg-panel);
      transform: translateX(4px);
    }

    .ingredient-item input[type="checkbox"] {
      cursor: pointer;
    }

    .ingredient-item .line-through {
      text-decoration: line-through;
    }

    .ingredient-item .opacity-50 {
      opacity: 0.5;
    }

    .meal-usage {
      margin-left: auto;
      font-size: 14px;
      color: var(--text-dim);
    }

    .action-buttons {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .btn {
      padding: 16px 32px;
      font-family: 'Press Start 2P', monospace;
      font-size: 14px;
      cursor: pointer;
      border: none;
      transition: all 0.2s;
    }

    .btn-primary {
      background: var(--accent);
      color: var(--bg-dark);
    }

    .btn-primary:hover {
      background: var(--accent);
      opacity: 0.9;
      transform: translateY(-4px);
      box-shadow: 0 6px 12px var(--accent-glow);
    }

    .btn-secondary {
      background: var(--accent);
      color: var(--bg-dark);
      border: none;
    }

    .btn-secondary:hover {
      background: var(--accent);
      opacity: 0.9;
      transform: translateY(-4px);
      box-shadow: 0 6px 12px var(--accent-glow);
    }
  </style>
</GameLayout>
