---
import GameLayout from '../layouts/GameLayout.astro';
import { decodeGameState, encodeGameState } from '../lib/urlCodec.js';
import { getAllMeals, generateShoppingList } from '../lib/gameData.js';

export const prerender = false;

const params = Astro.url.searchParams;
const state = decodeGameState(params);

if (!state || state.status !== 'complete') {
  return Astro.redirect('/');
}

const currentPlayer = params.get('player') || 'A';

// Fetch full meal data
const allMeals = await getAllMeals();
const finalMeals = state.results.finalMenu.map(id =>
  allMeals.find(m => m.id === id)
);

// Generate shopping list
const shoppingList = await generateShoppingList(finalMeals);

// Get checked items from URL
const checkedParam = params.get('checked') || '';
const checkedItems = checkedParam ? checkedParam.split(',') : [];
---

<GameLayout>
  <div class="panel">
    <div class="panel-title">QUEST COMPLETE!</div>

    <div class="final-menu">
      <h2>Your Final Menu</h2>
      <div class="menu-grid">
        {finalMeals.map(meal => (
          <div class="menu-item">
            <span class="menu-emoji">{meal?.emoji || '?'}</span>
            <div class="menu-details">
              <div class="menu-name">{meal?.name || 'Unknown'}</div>
              <div class="menu-meta">
                <span>{meal?.time}min</span>
                <span>{meal?.cost}</span>
                <span>{meal?.cuisine}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="shopping-list-section" x-data="shoppingListData()">
      <h3>Shopping List</h3>

      <div class="share-actions">
        <button @click="sendSMS" class="btn btn-primary">
          Conjure & Share
        </button>
        <button @click="copyLink" class="btn btn-secondary" title="Copy link">
          ðŸ”—
        </button>
      </div>
      <div id="share-message" class="share-message" style="display: none;"></div>

      {Object.entries(shoppingList.bySection).map(([sectionName, items]) => (
        <div class="grocery-section">
          <div class="section-header">
            <span class="section-name">{sectionName}</span>
          </div>

          <div class="add-item-form">
            <input
              type="text"
              x-model={`newItemBySection['${sectionName}']`}
              @keyup.enter={`addCustomItem('${sectionName}')`}
              placeholder="Add item..."
              class="add-item-input"
            />
            <button @click={`addCustomItem('${sectionName}')`} class="btn btn-secondary">+</button>
          </div>

          <ul class="ingredient-list">
            <template x-for="(customItem, index) in getCustomItemsForSection('{sectionName}')" :key="'custom-' + index">
              <li>
                <div class="ingredient-item custom-item">
                  <input
                    type="checkbox"
                    :checked="checkedItems.has('custom-' + customItem.id)"
                    @change="toggleItem('custom-' + customItem.id)"
                  />
                  <template x-if="editingId !== customItem.id">
                    <span
                      :class="checkedItems.has('custom-' + customItem.id) ? 'line-through opacity-50' : ''"
                      @dblclick="startEditing(customItem.id)"
                      class="item-text"
                    >
                      <span x-text="customItem.text"></span>
                    </span>
                  </template>
                  <template x-if="editingId === customItem.id">
                    <input
                      type="text"
                      x-model="editText"
                      @keyup.enter="saveEdit(customItem.id)"
                      @keyup.escape="cancelEdit"
                      @blur="saveEdit(customItem.id)"
                      x-init="$el.focus()"
                      class="edit-item-input"
                    />
                  </template>
                  <button @click="deleteCustomItem(customItem.id)" class="delete-btn" title="Delete">Ã—</button>
                </div>
              </li>
            </template>

            {items.map(item => {
              const itemId = item.ingredient.toLowerCase().replace(/[^a-z0-9]/g, '-');
              return (
                <li data-item-id={itemId}>
                  <label class="ingredient-item">
                    <input
                      type="checkbox"
                      :checked={`checkedItems.has('${itemId}')`}
                      @change={`toggleItem('${itemId}')`}
                    />
                    <span :class={`checkedItems.has('${itemId}') ? 'line-through opacity-50' : ''`}>
                      {item.ingredient}
                    </span>
                    <span class="meal-usage">
                      ({item.meals.join(', ')})
                    </span>
                  </label>
                </li>
              );
            })}
          </ul>
        </div>
      ))}
    </div>

    <div class="action-buttons">
      <button onclick="window.location.href = '/'" class="btn btn-primary">
        New Quest
      </button>
    </div>
  </div>

  <div class="narrative">
    <p>The week is planned. The kitchen awaits. Your culinary adventure begins now!</p>
  </div>

  <script is:inline>
    window.shoppingListData = function() {
      // Get initial checked items from URL
      const urlParams = new URLSearchParams(window.location.search);
      const checkedParam = urlParams.get('checked') || '';
      const initialChecked = checkedParam ? checkedParam.split(',').filter(Boolean) : [];

      // Get custom items from URL
      const customParam = urlParams.get('custom') || '';
      const initialCustom = customParam ? JSON.parse(decodeURIComponent(customParam)) : [];

      return {
        checkedItems: new Set(initialChecked),
        customItems: initialCustom,
        newItemBySection: {},
        editingId: null,
        editText: '',
        nextId: initialCustom.length > 0 ? Math.max(...initialCustom.map(i => i.id || 0)) + 1 : 0,

        getCustomItemsForSection(section) {
          return this.customItems.filter(item => item.section === section);
        },

        addCustomItem(section) {
          const text = (this.newItemBySection[section] || '').trim();
          if (text) {
            this.customItems.push({
              id: this.nextId++,
              text: text,
              section: section
            });
            this.newItemBySection[section] = '';
            this.updateURL();
          }
        },

        startEditing(id) {
          this.editingId = id;
          const item = this.customItems.find(i => i.id === id);
          this.editText = item ? item.text : '';
        },

        saveEdit(id) {
          if (this.editingId === id) {
            const text = this.editText.trim();
            if (text) {
              const item = this.customItems.find(i => i.id === id);
              if (item) {
                item.text = text;
                this.updateURL();
              }
            }
            this.editingId = null;
            this.editText = '';
          }
        },

        cancelEdit() {
          this.editingId = null;
          this.editText = '';
        },

        deleteCustomItem(id) {
          const index = this.customItems.findIndex(i => i.id === id);
          if (index !== -1) {
            this.customItems.splice(index, 1);
            // Remove from checked items if it was checked
            this.checkedItems.delete('custom-' + id);
            this.updateURL();
          }
        },

        toggleItem(itemId) {
          if (this.checkedItems.has(itemId)) {
            this.checkedItems.delete(itemId);
          } else {
            this.checkedItems.add(itemId);
          }
          this.updateURL();
        },

        updateURL() {
          const urlParams = new URLSearchParams(window.location.search);

          // Update checked items
          if (this.checkedItems.size > 0) {
            urlParams.set('checked', Array.from(this.checkedItems).join(','));
          } else {
            urlParams.delete('checked');
          }

          // Update custom items
          if (this.customItems.length > 0) {
            urlParams.set('custom', encodeURIComponent(JSON.stringify(this.customItems)));
          } else {
            urlParams.delete('custom');
          }

          const newUrl = `${window.location.pathname}?${urlParams.toString()}`;
          window.history.replaceState({}, '', newUrl);
        },

        async copyLink() {
          const shareUrl = window.location.href;
          const shareMessage = document.getElementById('share-message');

          try {
            await navigator.clipboard.writeText(shareUrl);
            shareMessage.textContent = 'Link copied to clipboard!';
            shareMessage.style.display = 'block';
            setTimeout(() => {
              shareMessage.style.display = 'none';
            }, 3000);
          } catch (err) {
            console.error('Copy failed:', err);
            shareMessage.textContent = 'Failed to copy link.';
            shareMessage.style.display = 'block';
          }
        },

        async sendSMS() {
          const shareUrl = window.location.href;
          const message = `Check out our Dinner Quest meal plan and shopping list: ${shareUrl}`;
          const shareMessage = document.getElementById('share-message');

          // Use Web Share API to share with partner
          if (navigator.share) {
            try {
              await navigator.share({
                title: 'Dinner Quest - Meal Plan',
                text: message
              });
              shareMessage.textContent = 'Shared successfully!';
              shareMessage.style.display = 'block';
              setTimeout(() => {
                shareMessage.style.display = 'none';
              }, 3000);
            } catch (err) {
              // User cancelled or share failed
              if (err.name !== 'AbortError') {
                console.error('Share failed:', err);
                shareMessage.textContent = 'Share failed. Copy link with ðŸ”— button.';
                shareMessage.style.display = 'block';
              }
            }
          } else {
            // Browser doesn't support Web Share API - fallback to SMS
            const smsUrl = `sms:?&body=${encodeURIComponent(message)}`;
            window.location.href = smsUrl;
          }
        }
      };
    }
  </script>

  <style>
    .final-menu h2 {
      font-size: 14px;
      color: var(--primary);
      margin-bottom: 16px;
      text-align: center;
    }

    .menu-grid {
      display: flex;
      flex-direction: column;
      gap: 12px;
      margin-bottom: 30px;
    }

    .menu-item {
      display: flex;
      align-items: center;
      gap: 16px;
      padding: 16px;
      background: var(--bg-dark);
      border: 2px solid var(--primary);
    }

    .menu-emoji {
      font-size: 32px;
    }

    .menu-details {
      flex: 1;
    }

    .menu-name {
      font-size: 13px;
      font-weight: bold;
      margin-bottom: 4px;
    }

    .menu-meta {
      display: flex;
      gap: 12px;
      font-size: 12px;
      color: var(--text-dim);
    }

    .shopping-list-section {
      margin: 30px 0;
    }

    .shopping-list-section h3 {
      font-size: 14px;
      color: var(--primary);
      margin-bottom: 16px;
      text-align: center;
    }

    .add-item-form {
      display: flex;
      gap: 8px;
      margin-bottom: 20px;
      width: 100%;
    }

    .add-item-input {
      flex: 1;
      min-width: 0;
      padding: 12px;
      font-family: 'VT323', monospace;
      font-size: 16px;
      background: var(--bg-dark);
      border: 2px solid var(--border);
      color: var(--text);
    }

    .add-item-input:focus {
      outline: none;
      border-color: var(--primary);
    }

    .add-item-input::placeholder {
      color: var(--text-dim);
    }

    .add-item-form .btn-secondary {
      flex-shrink: 0;
      width: 48px;
      height: 48px;
      padding: 0;
      font-size: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .share-actions {
      display: flex;
      gap: 12px;
      margin-bottom: 20px;
    }

    .share-actions .btn-primary {
      flex: 1;
    }

    .share-actions .btn-secondary {
      flex: 0;
      width: 52px;
    }

    .share-message {
      margin-bottom: 16px;
      padding: 12px;
      background: var(--bg-dark);
      border: 2px solid var(--primary);
      color: var(--primary);
      font-size: 12px;
      text-align: center;
    }

    .grocery-section {
      margin-bottom: 20px;
      padding: 16px;
      background: var(--bg-dark);
      border: 2px solid var(--border);
    }

    .section-header {
      font-size: 13px;
      font-weight: bold;
      color: var(--primary);
      margin-bottom: 8px;
      padding-bottom: 8px;
      border-bottom: 1px solid var(--border);
    }

    .grocery-section .add-item-form {
      margin-bottom: 12px;
    }

    .grocery-section .add-item-input {
      font-size: 12px;
      padding: 8px;
    }

    .grocery-section .add-item-form .btn-secondary {
      width: 36px;
      height: 36px;
      font-size: 18px;
    }

    .section-name {
      display: block;
    }

    .ingredient-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .ingredient-list li {
      margin: 4px 0;
    }

    .ingredient-item {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px;
      background: var(--bg);
      font-size: 12px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .ingredient-item:hover {
      background: var(--bg-dark);
    }

    .ingredient-item input[type="checkbox"] {
      cursor: pointer;
    }

    .ingredient-item .line-through {
      text-decoration: line-through;
    }

    .ingredient-item .opacity-50 {
      opacity: 0.5;
    }

    .meal-usage {
      margin-left: auto;
      font-size: 11px;
      color: var(--text-dim);
    }

    .custom-item {
      position: relative;
      padding-right: 36px;
    }

    .item-text {
      flex: 1;
      cursor: pointer;
    }

    .item-text:hover {
      color: var(--primary);
    }

    .edit-item-input {
      flex: 1;
      padding: 4px 8px;
      font-family: 'VT323', monospace;
      font-size: 12px;
      background: var(--bg-dark);
      border: 1px solid var(--primary);
      color: var(--text);
    }

    .edit-item-input:focus {
      outline: none;
      border-color: var(--accent);
    }

    .delete-btn {
      position: absolute;
      right: 8px;
      top: 50%;
      transform: translateY(-50%);
      background: transparent;
      border: none;
      color: var(--danger);
      font-size: 24px;
      line-height: 1;
      cursor: pointer;
      padding: 0;
      width: 24px;
      height: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .delete-btn:hover {
      color: var(--text);
      background: var(--danger);
    }

    .action-buttons {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .btn {
      padding: 16px 32px;
      font-family: 'Press Start 2P', monospace;
      font-size: 12px;
      cursor: pointer;
      border: none;
      transition: all 0.2s;
    }

    .btn-primary {
      background: var(--primary);
      color: var(--bg);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
    }

    .btn-secondary {
      background: var(--bg-dark);
      border: 2px solid var(--border);
      color: var(--text);
    }

    .btn-secondary:hover {
      border-color: var(--primary);
    }
  </style>
</GameLayout>
